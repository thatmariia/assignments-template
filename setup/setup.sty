% ------------------------ COLORS

\definecolor{ass-color}{HTML}{FCEA88}

\DeclareRobustCommand{\asshl}[1]{{\sethlcolor{ass-color}\hl{#1}}}

% ------------------------ FONTS

\setmainfont{AvenirNextCyr}[
    Path=fonts/avenir/,
    Extension = .ttf,
    UprightFont=*-Regular,
    BoldFont=*-Demi,
    ItalicFont=*-Italic,
    BoldItalicFont=*-DemiItalic
]

\urlstyle{same}

\newfontfamily{\emphfont}{Canela}[
    Path=fonts/canela/,
    Extension = .ttf,
    UprightFont=*-Regular,
    BoldFont=*-Bold,
    ItalicFont=*-RegularItalic,
    BoldItalicFont=*-BoldItalic
]

\setmathfont{Libertinus Math}

% ------------------------ TITLE STYLE

\setcounter{secnumdepth}{0}

\titleformat{\section}
  {\emphfont\LARGE\bfseries}{\thesection.}{1em}{}
\titleformat{\subsection}
  {\emphfont\Large\bfseries}{\thesubsection.}{1em}{}
\titleformat{\subsubsection}
  {\emphfont\large\bfseries}{\thesubsubsection.}{1em}{}
  
\titlespacing*{\section}{0pt}{\baselineskip}{0.3em}
\titlespacing*{\subsection}{0pt}{0.5em}{0.3em}
\titlespacing*{\subsubsection}{0pt}{0.3em}{0em}

%\renewcommand{\cfttoctitlefont}{\LARGE\bfseries\emphfont}
\renewcommand{\cftsecleader}{\cftdotfill{\cftdotsep}}
\newcommand\mydot[1]{\scalebox{#1}{.}}
\renewcommand\cftdot{{\color{ass-color}\mydot{2.5}}}

\renewcommand{\cftsecindent}{7.5em}
\renewcommand{\cftsubsecindent}{7.5em}
\renewcommand{\cftsubsubsecindent}{7.5em}
\renewcommand{\cftsecafterpnum}{\hspace*{7.5em}}
\renewcommand{\cftsubsecafterpnum}{\hspace*{7.5em}}
\renewcommand{\cftsubsubsecafterpnum}{\hspace*{7.5em}}
\addto\captionsenglish{\renewcommand{\contentsname}{}}
\newcommand{\toc}{\vskip -3em \tableofcontents}
  
